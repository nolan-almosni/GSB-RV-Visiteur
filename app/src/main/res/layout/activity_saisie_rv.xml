<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaisieRvActivity">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="568dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="46dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvDateVisite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de la visite : " />

        <Button
            android:id="@+id/bDateVisite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPraticien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Praticien :" />

        <TextView
            android:id="@+id/tvErrPraticien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:text="  * veuillez selectionner un praticien" />

    </LinearLayout>

        <Spinner
            android:id="@+id/spPraticien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motif :" />

        <TextView
            android:id="@+id/tvErrMotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:text=" * veuillez selectionner un motif" />

    </LinearLayout>

        <Spinner
            android:id="@+id/spMotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bilan : " />

        <TextView
            android:id="@+id/tvErrBilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:text=" * Le bilan doit Ãªtre remplis"/>

    </LinearLayout>

        <EditText
            android:id="@+id/etBilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCoefConfiance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coefficient de confiance :" />

        <TextView
            android:id="@+id/tvErrCoefConfiance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:text=" * veuillez selectionner un coefficient" />

    </LinearLayout>
        <Spinner
            android:id="@+id/spCoefConfiance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bAjoutRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Valider" />

            <Button
                android:id="@+id/bAnnulerRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>